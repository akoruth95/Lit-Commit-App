<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.unc.dominno.rekindleapp">

    <uses-permission android:name="android.permission.INTERNET"/> //Needed for FB integration

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FAQ"/>
        <activity android:name=".Messages" />
        <activity android:name=".Ratings" />
        <activity android:name=".ShowRatings"></activity>
        //To use FB login and share
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
        //Sharing links, images, or video via FB for Android app
        <provider android:authorities="com.facebook.app.FacebookContentProvider1712265072392198"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true" />
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/> //Needed for FB integration

    </application>

</manifest>
